function question_3_b(noisy_image)
avg_filter=ones(5,5) / 25;
h = fspecial('average', n);
weighted_avg_filter=[1 2 1; 2 4 2;1 2 1]/16;
avg_filtered_image=0.11*imfilter(noisy_image,avg_filter);
figure,imshow(avg_filtered_image);
weighted_avg_filtered_image=0.11*imfilter(noisy_image,weighted_avg_filter);
figure,imshow(weighted_avg_filtered_image);
end
